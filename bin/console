#!/usr/bin/env ruby
# frozen_string_literal: true
require 'bundler/setup'
require 'xommelier'
require 'pry'
begin
  require 'pry-byebug'
rescue LoadError
  STDERR.puts 'Byebug is enabled only in Ruby 2'
end
require 'pp'

SPEC_ROOT = File.expand_path('..', __FILE__)

Dir[File.join(SPEC_ROOT, 'spec/support/**/*.rb')].each { |f| require f }

Pry.start
